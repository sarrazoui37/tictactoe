game_board = [
    [0, 1, 2],
    [3, 4, 5],
    [6, 7, 8]
]

player_1_turn = True
winner = False

while not winner:
    for rows in game_board:
        print(rows)

    if player_1_turn:
        print('Player 1: ')
    else:
        print('Player 2: ')

    try:
        game_board_input = int(input())
    except:
        print('This move is not valid')
        continue
    if game_board[game_board_input] == 'X' or game_board(game_board_input) == 'O':
        print('Illegal move')
        continue

    if player_1_turn:
        if game_board_input in game_board:
            game_board[game_board_input] = 'X'
    else:
        if game_board_input in game_board:
            game_board[game_board_input] = 'O'

    player_1_turn = not player_1_turn

   # win conditions
   if 'X'*3 in game_board or 'O'*3 in game_board:
       winner=True
       print(rows)

print('You win!')





  

